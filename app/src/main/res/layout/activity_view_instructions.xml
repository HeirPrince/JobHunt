<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLighterGrey"
    tools:context="com.example.prince.jobhunt.activities.ViewInstructions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/header"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/vector_call"
                android:backgroundTint="@color/colorAccent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="+250782085695"
                android:textSize="10sp"
                android:textColor="#000"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/handshake"
            app:civ_border_width="6dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorLighterGrey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/vector_locate"
                android:backgroundTint="@color/colorAccent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GISENYI"
                android:textSize="10sp"
                android:textColor="#000"/>

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/header"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textStyle="bold"
                android:textColor="#464646"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+250782085695"
                android:textSize="10sp"
                android:textColor="#000"
                android:layout_margin="4dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>





</RelativeLayout>
